<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<table>

  <tr>
    <th>ID</th>
    <th>Song Name</th>
    <th>Artist</th>
    <th>Genres</th>
 </tr>

  <tr>
    <td><%=@song.id%></td>
    <td><%=@song.name%></td>
    <td><a href='/artists/<%=@song.artist.slug%>'> <%=@song.artist.name%> </a></td>
    <td>
      <%@song.genres.each do |genre|%>
        <a href = '/genres/<%=genre.slug%>'><%=genre.name%></a>
      <% end %>
    </td>
  </tr>
</table>
<a href ='/songs/<%=@song.slug%>/edit'>Edit</a>
